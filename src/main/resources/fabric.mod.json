{
  "schemaVersion": 1,
  "id": "helpfulcommands",
  "version": "${version}",

  "name": "Helpful Commands",
  "description": "Adds a bunch of helpful commands and shortcuts for existing ones. You can also find some new command-related features that are not possible in the base game. Can be easily configured, and each individual command is toggleable.",
  "authors": [
    "ThatsNotM3"
  ],
  "contact": {
    "homepage": "https://github.com/ThatsNotM3/HelpfulCommands",
    "sources": "https://github.com/ThatsNotM3/HelpfulCommands",
    "issues": "https://github.com/ThatsNotM3/HelpfulCommands/issues"
  },

  "license": "MIT License",
  "icon": "assets/helpfulcommands/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.thatsnotm3.helpfulcommands.HelpfulCommands"
    ],
    "client":[
      "net.thatsnotm3.helpfulcommands.HelpfulCommandsClient"
    ]
  },
  "mixins": [
    "helpfulcommands.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric-api": "*",
    "minecraft": "~1.19.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}